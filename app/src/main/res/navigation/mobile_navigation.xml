<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/mainFragment">


    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.orderingfood.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.orderingfood.ui.categories.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_shopFragment"
            app:destination="@id/shopFragment" />
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainFragment_to_personFragment"
            app:destination="@id/personFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dishesFragment"
            app:destination="@id/dishesFragment" />
    </fragment>
    <fragment
        android:id="@+id/personFragment"
        android:name="com.example.orderingfood.ui.PersonFragment"
        android:label="fragment_person"
        tools:layout="@layout/fragment_person" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.orderingfood.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.orderingfood.ui.shop.CartFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/dishDetailsFragment"
        android:name="com.example.orderingfood.ui.DishDetailsFragment"
        android:label="DishDetailsFragment" />
    <fragment
        android:id="@+id/dishesFragment"
        android:name="com.example.orderingfood.ui.dishes.DishesFragment"
        android:label="DishesFragment">
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <action
            android:id="@+id/action_dishesFragment_to_dishDetailsFragment"
            app:destination="@id/dishDetailsFragment" />
    </fragment>
</navigation>